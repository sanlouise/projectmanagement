<% if current_user %>
<h3 class="pull-right">Organization: <%= @tenant.name %></h3>
<%= render 'projects/list' %>
<% else %>
<div class="jumbotron text-center">
  <h2>Welcome to the SaaS Collaboration App!</h2>
  <p class="lead">
    No more stress. We make sure things get done.
  </p>
</div>
<div class="row">
  <div class="plans clearfix">
    <div class="col-lg-4 col-lg-offset-2 plan well text-center">
      <h2>Free Plan</h2>

      <div class="features">
        <ul>
          <li>Unlimited file uploads</li>
          <li>Access anywhere, anytime</li>
          <li>1 project</li>
          <div class="price">
            Price: Free
          </div>
          </br>
        </ul>
      </div>
      <p>
        <%= link_to 'Sign Up', new_user_registration_path(plan: 'free'), class: 'btn btn-primary sign-up' %>
      </p>
    </div>
    <div class="col-lg-4 plan well text-center">
      <h2>Premium Plan</h2>
      
      <div class="features">
        <ul>
          <li>Unlimited file uploads</li>
          <li>Responsive design</li>
          <li>Access anywhere</li>
          <li class='extra'>Unlimited projects</li>
          <div class="price">
            Price: $10
          </div>
        </ul>
      </div>
      <p>
        <%= link_to 'Sign Up', new_user_registration_path(plan: 'premium'), class: 'btn btn-primary sign-up' %>
      </p>
    </div>
  </div>
</div>
<% end %>